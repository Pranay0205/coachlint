{
  "name": "coachlint",
  "displayName": "coachlint",
  "description": "AI-powered coding coach that transforms harsh compiler errors into encouring, actionable, guidance",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
       {
        "command": "coachlint.setApiKey",
        "title": "Set API Key",
        "category": "CoachLint"
      },
      {
        "command": "coachlint.showApiKeyStatus", 
        "title": "Show API Key Status",
        "category": "CoachLint"
      },
      {
        "command": "coachlint.clearApiKey",
        "title": "Clear API Key", 
        "category": "CoachLint"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
